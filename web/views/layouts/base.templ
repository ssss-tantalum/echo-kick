package layouts

templ Base(title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<link href="/web/static/styles.css" rel="stylesheet"/>
			<script src="/web/static/scripts.js"></script>
		</head>
		<body class="min-h-screen w-3/4 mx-auto">
			{ children... }
		</body>
	</html>
}
